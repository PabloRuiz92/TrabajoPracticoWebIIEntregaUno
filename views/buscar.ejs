<!------------------------------------- HEADER ---------------------------------------->
<%- include('./header'); %>     
<!------------------------------------- NAVBAR ---------------------------------------->
<%- include('./navbar'); %>   
<!------------------------------------- BODY ------------------------------------------> 
  <section class="container text-center my-3">
      <h1>Buscar una película por ID</h1>
      <form action="/peliculas/buscar_id" method="POST">
        
          <div class="row mb-3">
              <div class="col-md-6">
              <input
                  type="number"
                  class="form-control"
                  placeholder="Número de ID de la película"
                  name="id"
                  required
              />
              </div>
              <div class="col-md-6">
              <select class="form-select" name="origen" required>
                  <option value="">Seleccionar origen</option>
                  <option value="nacional">Nacional</option>
                  <option value="extranjera">Extranjera</option>
              </select>
              </div>
          </div>
    
        <h6 class="text-start text-muted">Todos los campos son obligatorios</h6>
    
        <div class="d-grid">
          <button type="submit" class="btn btn-block botonForm">Buscar por ID</button>
        </div>
        
      </form>
  </section>
  <section class="container text-center my-3">
      <h1>Buscar una película por título</h1>
      <form action="/peliculas/buscar_titulo" method="POST">
        
          <div class="row mb-3">
              <div class="col-md-6">
                  <input
                  type="text"
                  class="form-control"
                  placeholder="Título de la película"
                  name="titulo"
                  required
              />
              </div>
              <div class="col-md-6">
              <select class="form-select" name="origen" required>
                  <option value="">Seleccionar origen</option>
                  <option value="nacional">Nacional</option>
                  <option value="extranjera">Extranjera</option>
              </select>
              </div>
          </div>
    
        <h6 class="text-start text-muted">Todos los campos son obligatorios</h6>
    
        <div class="d-grid">
          <button type="submit" class="btn btn-block botonForm">Buscar por Título</button>
        </div>
        
      </form>
  </section>
  <% if (mensaje) { %>
      <p class="text-center">
        <%= mensaje %>
      </p>
    <% } %>
    
    <% if (busqueda) { %>
      <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Título</th>
              <th>Año</th>
              <th>Origen</th>
            </tr>
          </thead>
      <tbody>
            <tr>
              <td><%= busqueda.id %></td>
              <td><%= busqueda.titulo %></td>
              <td><%= busqueda.anio %></td>
              <td><%= busqueda.origen %></td>
            </tr>
        </tbody>
      </table>
    <% } %>
<!------------------------------------- FOOTER ------------------------------------------>
<%- include('./footer'); %>