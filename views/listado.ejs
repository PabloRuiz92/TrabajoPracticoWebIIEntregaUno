<!------------------------------------- HEADER ---------------------------------------->
<%- include('./header'); %>     
<!------------------------------------- NAVBAR ---------------------------------------->
<%- include('./navbar'); %>          
<!------------------------------------- BODY ------------------------------------------>
<div class="container my-3">
  <h1 style="text-align: center;">Películas</h1>
  <table>
    <thead>
      <tr>
        <th>Título</th>
        <th>Origen</th>
        <th>Año</th>
      </tr>
    </thead>
    <tbody>
      <% peliculas.forEach(pelicula => { %>
        <tr>
          <td><%= pelicula.titulo %></td>
          <td><%= pelicula.origen %></td>
          <td><%= pelicula.anio %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
